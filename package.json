{
	"name": "task-hub-backend",
	"version": "0.0.1",
	"description": "Dashboard управления задачами, проектами. Включает task-manager, графики прогресса, timeline и чат. Привязка к проектам, настройки профиля, поиск и много другого 'жира' по функционалу.",
	"author": {
		"name": "Kirill Vegele",
		"email": "kirove.work@gmail.com",
		"url": "https://github.com/zxcanton228"
	},
	"repository": {},
	"private": true,
	"engines": {
		"bun": ">=1.2"
	},
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "dotenv -e .env.development -- nest start",
		"start:dev": "dotenv -e .env.development -- nest start --watch",
		"start:prod": "dotenv -e .env.development -- bun run -r ./tsconfig-paths-bootstrap.js ./dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"seed:dev": "dotenv -e .env.development -- bun run -r ./tsconfig-paths-bootstrap.js ./seeder/seeder",
		"seed:prod": "dotenv -e .env.production -- bun run -r ./tsconfig-paths-bootstrap.js ./dist/seeder/seeder",
		"db:push": "dotenv -e .env.development -- bun prisma db push",
		"db:migrate": "dotenv -e .env.development -- bun prisma migrate dev",
		"db:reset": "dotenv -e .env.development -- prisma db push --force-reset --accept-data-loss"
	},
	"dependencies": {
		"@faker-js/faker": "^9.0.3",
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/common": "^11.0.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.0.1",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/mapped-types": "^2.1.0",
		"@nestjs/passport": "^11.0.5",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/platform-socket.io": "^11.1.5",
		"@nestjs/serve-static": "^5.0.3",
		"@nestjs/websockets": "^11.1.5",
		"@nestlab/google-recaptcha": "^3.10.0",
		"@prisma/client": "^6.10.1",
		"@react-email/components": "^0.3.1",
		"@react-email/render": "^1.1.3",
		"app-root-path": "^3.1.0",
		"argon2": "^0.41.1",
		"chalk": "4.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"compression": "^1.8.0",
		"cookie-parser": "^1.4.7",
		"dotenv-cli": "^8.0.0",
		"fs-extra": "^11.3.0",
		"helmet": "^8.1.0",
		"lodash": "^4.17.21",
		"nodemailer": "^7.0.5",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-telegram-official": "^2.0.1",
		"react-email": "^4.2.0",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.1",
		"twilio": "^5.7.3"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.7",
		"@types/app-root-path": "^3.1.0",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/lodash": "^4.17.20",
		"@types/lodash.shuffle": "^4.2.9",
		"@types/multer": "^2.0.0",
		"@types/node": "^22.10.7",
		"@types/passport-github2": "^1.2.9",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.37.0",
		"@typescript-eslint/parser": "^8.37.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"prettier": "^3.4.2",
		"prettier-plugin-prisma": "^5.0.0",
		"prisma": "^6.10.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"prisma": {
		"schema": "./prisma/schema"
	}
}
