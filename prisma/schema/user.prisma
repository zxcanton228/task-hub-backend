model User {
  id         String  @id @default(cuid())
  email      String  @unique
  name       String?
  password   String
  avatarPath String? @map("avatar_path")

  verificationToken String? @default(cuid()) @map("verification_token")
  rights            Role[]  @default([USER])

  tasks Task[]

  chats    Chat[]
  messages Message[]

  @@map("user")
}

enum Role {
  USER
  PREMIUM
}
